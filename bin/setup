#!/bin/sh
set -e

current_dir=$(basename $(pwd))

if [ "$current_dir" == "hello_livebook" ]
then
  # Make this project available from the home dir
  ln -sF $(pwd) $HOME/
else
  echo "Please go to \"hello_livebook\" project directory first"
  exit 1
fi

# Update the local copy of livebook source code
git submodule update --remote --merge

(
  cd ./livebook

  mix deps.get
)
